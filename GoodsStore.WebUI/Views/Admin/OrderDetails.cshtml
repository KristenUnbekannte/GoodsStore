@model GoodsStore.BusinessLogic.Models.OrderModel

@{
    ViewBag.Title = "Админ панель: просмотр деталей заказа";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="admin_view">
    <div class="panel panel-primary">
        <div class=" panel-heading">
            <h3>Пpосмотр деталей заказа</h3>
        </div>
        <div class="panel-body">
            <div>
                <table class="table">
                        <tr>
                            <th>Имя:</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th>Адрес:</th>
                            <td>@Model.Address @Model.City, @Model.Country</td>
                        </tr>
                        <tr>
                            <th>Телефон:</th>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <th>Дата:</th>
                            <td>@Model.Date</td>
                        </tr>
                        <tr>
                            <th>Общая стоимость:</th>
                            <td>@Model.TotalPrice руб.</td>
                        </tr>
                        <tr>
                            <th>Подарочная упаковка:</th>
                            <td>@Model.GiftWrap</td>
                        </tr>
                </table>
            </div>

            <div class="panel panel-default">
                <div class="admin_table">
                    <table class="table table-striped table-condensed table-bordered">
                        <tr>
                            <th class="text-center">ID</th>
                            <th class="text-left">Товар</th>
                            <th class="text-center">Размер</th>
                            <th class="text-center">Кол-во</th>
                            <th class="text-center">Цена (1 шт.)</th>
                            <th class="text-center">Итого</th>
                        </tr>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td class="text-center">@item.Id</td>
                                <td class="text-left">@item.GoodsName</td>
                                <td class="text-center">@item.SizeName</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-center">@item.Price</td>
                                <td class="text-right">@item.TotalPrice руб.</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
            <div class="panel-footer">
                @Html.ActionLink("Вернуться к списку заказов", "ListOrders", null, new
            {
                @class = "btn btn-success"
            })
            </div>
        </div>
    </div>
</div>
