@model IEnumerable<GoodsStore.BusinessLogic.Models.CategoryModel>

@{
    ViewBag.Title = "Админ панель: список категорий";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="admin_body_small">
    <div class="panel panel-primary">
        <div class=" panel-heading">
            <h4>Список категорий</h4>
        </div>
        <table class="table table-striped table-condensed">
            <tr>
                <th class="text-center">ID</th>
                <th>Название</th>
                <th class="text-center" colspan="2">Действие</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-center">@item.CategoryId.</td>
                    <td>@item.Name</td>
                    <td class="text-right">
                        @using (Html.BeginForm("EditCategory", "Admin", FormMethod.Get))
                        {
                            @Html.Hidden("CategoryId", item.CategoryId)
                            <button type="submit" class="btn btn-success btn-xs">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            </button>
                        }
                    </td>
                    <td class="text-left">
                        @using (Html.BeginForm("DeleteCategory", "Admin"))
                        {
                            @Html.Hidden("CategoryId", item.CategoryId)
                            <button type="submit" class="btn btn-warning btn-xs">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        }
                    </td>
                </tr>
            }
        </table>
        <div class="panel-footer">
            @Html.ActionLink("Добавить категорию", "AddCategory", null,
            new { @class = "btn btn-success" })
        </div>
    </div>
</div>
