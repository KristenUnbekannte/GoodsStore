@model GoodsStore.BusinessLogic.Models.OrderModel

@{
    ViewBag.Title = "Goodstore: форма заказа";
}
<div class="shipping_details">
    <h2>Оформить заказ сейчас</h2>
    <p>Пожалуйста введите ваши контактные данные, и мы отправим товар!</p>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary();
        <h3>Данные</h3>
        <div class="form-group">
            <label>Ваше имя:</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>

        <h3>Адрес доставки</h3>
        <div class="form-group">
            <label>Адрес:</label>
            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Город:</label>
            @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Страна:</label>
            @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Телефон для связи:</label>
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
        </div>
        <h3>Опции</h3>
        <div class="form-group">
            @Html.CheckBoxFor(x => x.GiftWrap)
            <label>Использовать подарочную упаковку?</label>
        </div>
        <div class="text-left">
            <input class="btn btn-success" type="submit" value="Обработать заказ" />
        </div>
    }
</div>
